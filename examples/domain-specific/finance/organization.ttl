@prefix : <http://www.semanticweb.org/ontologies/2024/11/CorporateFinanceOnto#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# ========================================
# ORGANIZATION CLASSES
# ========================================

:Company rdf:type owl:Class ;
    rdfs:comment "A legal entity formed to engage in business" .

:Department rdf:type owl:Class ;
    rdfs:comment "A division of a large organization" .

:Employee rdf:type owl:Class ;
    rdfs:comment "A person employed for wages or salary" .


# ========================================
# ORGANIZATION PROPERTIES
# ========================================

:employs rdf:type owl:ObjectProperty ;
    rdfs:domain :Company ;
    rdfs:range :Employee ;
    rdfs:comment "Relates a company to its employees" .

:belongsToDepartment rdf:type owl:ObjectProperty ;
    rdfs:domain :Employee ;
    rdfs:range :Department ;
    rdfs:comment "Associates an employee with a specific department" .

:revenue rdf:type owl:DatatypeProperty ;
    rdfs:domain :Company ;
    rdfs:range xsd:decimal ;
    rdfs:comment "Total income generated by the company" .
