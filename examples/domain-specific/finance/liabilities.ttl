@prefix : <http://www.semanticweb.org/ontologies/2024/11/CorporateFinanceOnto#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# ========================================
# LIABILITY CLASSES
# ========================================

:Liability rdf:type owl:Class ;
    rdfs:comment "Something a person or company owes, usually a sum of money" .

:CurrentLiability rdf:type owl:Class ;
    rdfs:subClassOf :Liability ;
    rdfs:comment "Debts due within one year" .

:LongTermLiability rdf:type owl:Class ;
    rdfs:subClassOf :Liability ;
    rdfs:comment "Debts due after more than one year" .


# ========================================
# LIABILITY PROPERTIES
# ========================================

:hasLiability rdf:type owl:ObjectProperty ;
    rdfs:domain :Company ;
    rdfs:range :Liability ;
    rdfs:comment "Indicates debts or obligations of the company" .

:liabilityAmount rdf:type owl:DatatypeProperty ;
    rdfs:domain :Liability ;
    rdfs:range xsd:decimal ;
    rdfs:comment "Monetary amount of a liability" .
