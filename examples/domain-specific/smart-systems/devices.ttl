@prefix : <http://www.semanticweb.org/ontologies/2024/11/SmartHomeOnto#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# ========================================
# DEVICE TYPES
# ========================================

:Lighting rdf:type owl:Class ;
    rdfs:subClassOf :Device ;
    rdfs:comment "Devices providing illumination" .

:Thermostat rdf:type owl:Class ;
    rdfs:subClassOf :Device ;
    rdfs:comment "Device for regulating temperature" .

:SecurityCamera rdf:type owl:Class ;
    rdfs:subClassOf :Device ;
    rdfs:comment "Video camera for surveillance" .

:SmartLock rdf:type owl:Class ;
    rdfs:subClassOf :Device ;
    rdfs:comment "Electronic locking device" .


# ========================================
# DEVICE PROPERTIES
# ========================================

:deviceState rdf:type owl:DatatypeProperty ;
    rdfs:domain :Device ;
    rdfs:range xsd:string ;
    rdfs:comment "Current state of the device (e.g., On, Off, Standby)" .

:temperatureSetting rdf:type owl:DatatypeProperty ;
    rdfs:domain :Thermostat ;
    rdfs:range xsd:float ;
    rdfs:comment "Temperature setting for climate control devices" .
